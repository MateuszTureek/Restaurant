@model Restaurant.WebUI.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div id="ContainerForForm">
    @using (Html.BeginForm("ChangePassword", "AccountManage", FormMethod.Post))
    {
        <h3>Change your password.</h3>
        <p>
            <a class="back" href="@Url.Action("Index","AccountManage")">Back to manage</a>
            <div style="clear: both;"></div>
        </p>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "validation-msg" })

        <div class="f-group">
            @Html.LabelFor(m => m.OldPassword)
            <div class="f-input">
                @Html.EditorFor(m => m.OldPassword)
                <span class="validation-msg">
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </span>
            </div>
        </div>
        <div class="f-group">
            @Html.LabelFor(m => m.NewPassword)
            <div class="f-input">
                @Html.EditorFor(m => m.NewPassword)
                <span class="validation-msg">
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </span>
            </div>
        </div>
        <div class="f-group">
            @Html.LabelFor(m => m.ConfirmPassword)
            <div class="f-input">
                @Html.EditorFor(m => m.ConfirmPassword)
                <span class="validation-msg">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </span>
            </div>
        </div>
        <div class="right-button">
            <input type="submit" value="Save changes" class="btn-submit" />
        </div>
        <div style="clear: both;"></div>
    }
</div>